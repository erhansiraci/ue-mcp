{
  "name": "@erhansiraci/ue-mcp",
  "version": "1.0.1",
  "description": "Comprehensive MCP server for Unreal Engine Remote Control API - Control actors, assets, levels, and editor through Claude and other AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ue-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:mock": "node dist/index.js --mock",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.16.0",
    "yargs": "^17.7.2",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@types/yargs": "^17.0.32",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "unreal-engine",
    "unreal",
    "ue5",
    "remote-control",
    "remote-control-api",
    "claude",
    "ai-tools",
    "game-development",
    "game-dev",
    "anthropic"
  ],
  "author": "Erhan Siraci <erhansiraci@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erhansiraci/ue-mcp.git"
  },
  "homepage": "https://github.com/erhansiraci/ue-mcp#readme",
  "bugs": {
    "url": "https://github.com/erhansiraci/ue-mcp/issues"
  }
}
