# Unreal Engine MCP Server Configuration
# Copy this file to .env and modify as needed

# Unreal Engine host address
UE_HOST=127.0.0.1

# Remote Control HTTP port (default: 30010)
UE_HTTP_PORT=30010

# Remote Control WebSocket port (default: 30020)
UE_WS_PORT=30020

# Request timeout in milliseconds
UE_TIMEOUT=5000

# Number of retry attempts for failed requests
UE_RETRY_ATTEMPTS=3

# Delay between retry attempts in milliseconds
UE_RETRY_DELAY=1000

# Enable mock mode (for testing without Unreal Engine)
UE_MOCK_MODE=false

# Enable verbose logging
UE_VERBOSE=false
